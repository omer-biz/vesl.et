---
const { title, date, tags, url = "#", faded = false } = Astro.props;
---
<li class={`group ${faded ? 'opacity-60 hover:opacity-100' : ''} transition-opacity`}>
    <a href={url} class="block">
        <div class="flex items-baseline justify-between mb-1">
            <h3 class="text-xl font-bold group-hover:text-teal-700 group-hover:underline decoration-2 underline-offset-4 transition-colors">
                {title}
            </h3>
        </div>
        <div class="text-sm text-stone-500 flex space-x-4">
             <span>{date}</span>
             <span class="text-stone-400">|</span>
             <span>{tags}</span>
        </div>
    </a>
</li>
