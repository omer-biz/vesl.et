---
import BaseLayout from "../layouts/BaseLayout.astro";
import boat from "../assets/images/boat.svg";
import { Image } from "astro:assets";
---

<BaseLayout title="404 - Lost at Sea">
  <section class="min-h-[60vh] flex flex-col items-center justify-center text-center px-6">
    <div class="mb-8 text-stone-400 select-none animate-pulse">

    <section class="flex flex-col items-center justify-center text-center">
        <Image 
        src={boat} 
        alt="sail boat" 
            width={300}
        />
    </section>

    <h1 class="text-4xl md:text-6xl font-bold text-orange-800 mb-6 uppercase tracking-tighter">
      404: Adrift
    </h1>

    <div class="max-w-md space-y-6">
      <p class="text-xl text-stone-700 leading-relaxed font-bold">
        Ahoy sailor, it seems you have found yourself at the edge of the 7 seas.
      </p>
      
      <p class="text-stone-500 italic">
        Careful now, we don't want to go into <span class="text-stone-800">Davey Jones' locker</span>.
      </p>
    </div>

    <div class="mt-12">
      <a 
        href="/" 
        class="inline-block px-6 py-3 border-2 border-stone-800 text-stone-800 font-bold hover:bg-stone-800 hover:text-stone-100 transition-all duration-200 group"
      >
        <span class="text-teal-700 group-hover:text-teal-300 mr-2">$</span> 
        cd /home/port
      </a>
    </div>

    <div class="mt-24 text-[10px] text-stone-400 uppercase tracking-[0.3em]">
      Current Coordinates: Unknown / Void
    </div>
  </section>
</BaseLayout>
