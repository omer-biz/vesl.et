---
import "../styles/global.css";
const { title = "vesl.et" } = Astro.props;
---
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="bg-stone-200 text-stone-800 font-mono p-6 md:p-12 min-h-screen selection:bg-amber-200 selection:text-stone-900">
		<main class="max-w-3xl mx-auto">
			<slot />
		</main>
	</body>
</html>
